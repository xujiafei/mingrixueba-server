# 服务器配置
HOST=0.0.0.0
NODE_ENV=development
PORT=3000

# 数据库配置
# 开发环境数据库配置
DEV_DB_HOST=localhost
DEV_DB_PORT=3306
DEV_DB_NAME=chaolun_dev
DEV_DB_USER=dev_user
DEV_DB_PASS=dev_password

# 生产环境数据库配置
PROD_DB_HOST=localhost
PROD_DB_PORT=3306
PROD_DB_NAME=chaolun_prod
PROD_DB_USER=prod_user
PROD_DB_PASS=prod_password

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=7d

# 微信小程序配置
WX_APPID=your_wx_appid_here
WX_SECRET=your_wx_secret_here

# 腾讯云COS配置（兼容旧版）
COS_SECRET_ID=your_cos_secret_id_here
COS_SECRET_KEY=your_cos_secret_key_here
COS_BUCKET=your_cos_bucket_here
COS_REGION=your_cos_region_here

# 云开发配置
CLOUDBASE_ENV_ID=your-cloudbase-env-id

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 开发环境配置
# 是否使用云存储（默认不使用，使用本地文件系统模拟）
# 设置为true则使用云开发存储，设置为false则使用本地文件系统模拟
# USE_CLOUD_STORAGE=true

# 支付配置（后续添加）
WX_MCHID=your_merchant_id
WX_PAY_KEY=your_pay_key
